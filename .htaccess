# Disable Browser Caching - AGGRESSIVE
<IfModule mod_headers.c>
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0, private"
    Header set Pragma "no-cache"
    Header set Expires "0"
    Header set Last-Modified "%{TIME}e"
    Header unset ETag
    FileETag None
</IfModule>

# Disable caching for specific file types
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|webp|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0, private"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Disable caching for PHP files
<FilesMatch "\.(php)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0, private"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Disable ETags
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None
